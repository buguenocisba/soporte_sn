        <script><![CDATA[(function executeRule(current, previous /*null when async*/ ) {

    var saldoHeredable = 0;
    var saldoIndividual = current.u_slx_saldo_individual;
    var saldoMesAnterior = current.u_slx_mes_anterior.u_slx_saldo_individual;

    // Calcula el saldo
    if (saldoMesAnterior > 0) {
        saldoHeredable = saldoIndividual + saldoMesAnterior;
    }

    //Asigna saldo a variable
    current.u_slx_saldo_heredable = saldoHeredable;

	//Busca el siguiente mes con el sys id actual
    var mesSiguiente = new GlideRecord("x_solsa_soporte_sn_registro_mensual_soporte_servicenow");
    mesSiguiente.addQuery("u_slx_mes_anterior", current.sys_id);
    mesSiguiente.query();
    if (mesSiguiente.next()) {
		// Copia las horas heredables al mes siguiente
		mesSiguiente.u_slx_horas_heredadas = current.u_slx_saldo_heredable;
		mesSiguiente.update();
    }


})(current, previous);]]></script>
