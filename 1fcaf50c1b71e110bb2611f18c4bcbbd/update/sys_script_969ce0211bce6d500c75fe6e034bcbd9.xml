        <script><![CDATA[(function executeRule(current, previous /*null when async*/ ) {

    var saldoIndividual = current.u_slx_saldo_individual;
    var horasHeredadas = current.u_slx_horas_heredadas;
    var saldoFinal = 0;

    saldoFinal = saldoIndividual + horasHeredadas;
	
	current.u_slx_saldo_final = saldoFinal;
	
    if (saldoFinal < 0) {
        //Busca el siguiente mes con el sys id actual
        var mesSiguiente = new GlideRecord("x_solsa_soporte_sn_registro_mensual_soporte_servicenow");
        mesSiguiente.addQuery("u_slx_mes_anterior", current.sys_id);
        mesSiguiente.query();
        if (mesSiguiente.next()) {
            // Copia las horas heredables al mes siguiente
            mesSiguiente.u_slx_horas_anticipadas = -(current.u_slx_saldo_final);
            mesSiguiente.update();
        }
    }




})(current, previous);]]></script>
